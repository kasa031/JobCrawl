# Database
DATABASE_URL=postgresql://user:password@localhost:5432/jobcrawl

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Server
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# AI Provider - Velg mellom: 'openai', 'openrouter', 'gemini'
# OpenRouter og Gemini har GRATIS tier!
AI_PROVIDER=openrouter

# OPENAI_API_KEY - Kun nødvendig hvis AI_PROVIDER=openai
# Hvis du ikke har en API-nøkkel ennå, få en her: https://platform.openai.com/api-keys
# Format: OPENAI_API_KEY=sk-...
OPENAI_API_KEY=your_openai_api_key_here

# OPENROUTER_API_KEY - GRATIS! Få en her: https://openrouter.ai/keys
# Bruk dette hvis AI_PROVIDER=openrouter
OPENROUTER_API_KEY=your_openrouter_api_key_here

# GEMINI_API_KEY - GRATIS! Få en her: https://aistudio.google.com/app/apikey
# Bruk dette hvis AI_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Email Configuration - iCloud SMTP
# SMTP_HOST=smtp.mail.me.com
# SMTP_PORT=587
# SMTP_USER=your_email@icloud.com
# SMTP_PASSWORD=your_icloud_app_password_here

# Email Configuration - Gmail SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_gmail_app_password_here
# Hvordan få Gmail app password: https://myaccount.google.com/apppasswords

# Development MailHog override (for lokal testing)
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USER=
# SMTP_PASSWORD=

